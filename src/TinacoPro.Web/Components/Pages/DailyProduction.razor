            "InProgress" => Color.Info,
            "Completed" => Color.Success,
            "Cancelled" => Color.Error,
            _ => Color.Default
        };
    }

    private Color GetShiftColor(string shift)
    {
        return shift switch
        {
            "Morning" => Color.Info,
            "Afternoon" => Color.Warning,
            "Night" => Color.Secondary,
            _ => Color.Default
        };
